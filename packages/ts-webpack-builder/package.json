{
  "name": "@taqtile/ts-webpack-builder",
  "version": "0.2.3-alpha.0",
  "description": "Functional building composers for webpack config",
  "homepage": "https://github.com/indigotech/taq-node-web-tools",
  "bugs": "https://github.com/indigotech/taq-node-web-tools/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/indigotech/taq-node-web-tools.git"
  },
  "author": "Taqtile",
  "license": "MIT",
  "main": "index.js",
  "typings": "index.d.ts",
  "scripts": {
    "clean": "rimraf dist",
    "prebuild": "yarn run clean",
    "build": "tsc",
    "test": "jest --colors --verbose --coverage",
    "postbuild": "yarn run copy-files && clean-to-publish",
    "copy-files": "copyfiles './README.md' './LICENSE' 'dist/'",
    "prepare": "yarn run build"
  },
  "devDependencies": {
    "@taqtile/publish-package-json": "^0.2.3-alpha.0",
    "@types/jest": "23.3.12",
    "@types/webpack": "4.4.22",
    "@types/webpack-dev-server": "3.1.1",
    "copyfiles": "2.1.0",
    "jest": "23.6.0",
    "rimraf": "2.6.3",
    "ts-jest": "23.10.5",
    "webpack": "4.28.1"
  },
  "peerDependencies": {
    "typescript": "^3.1.6",
    "webpack": "^4.28.1"
  },
  "dependencies": {
    "webpack-merge": "4.2.1"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "collectCoverageFrom": [
      "!src/**/index.ts",
      "src/**/*.ts"
    ],
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|js)$",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "dist/*"
    ],
    "moduleFileExtensions": [
      "ts",
      "js"
    ]
  },
  "engines": {
    "node": ">=4"
  },
  "publishConfig": {
    "access": "public"
  }
}
