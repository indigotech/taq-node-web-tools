{
  "name": "@taqtile/ts-class-extensions",
  "version": "0.7.1",
  "description": "TypeScript class extensions",
  "homepage": "https://github.com/indigotech/taq-node-web-tools",
  "bugs": "https://github.com/indigotech/taq-node-web-tools/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/indigotech/taq-node-web-tools.git"
  },
  "main": "index.js",
  "typings": "index.d.ts",
  "author": "Taqtile",
  "license": "MIT",
  "scripts": {
    "clean": "rimraf dist",
    "prebuild": "yarn run clean",
    "build": "tsc",
    "postbuild": "yarn run copy-files && clean-to-publish",
    "copy-files": "copyfiles './README.md' './LICENSE' 'dist/'",
    "prepare": "yarn run build"
  },
  "devDependencies": {
    "@taqtile/publish-package-json": "^0.7.1",
    "@types/jest": "27.5.0",
    "copyfiles": "2.4.1",
    "jest": "28.1.0",
    "rimraf": "3.0.2",
    "ts-jest": "28.0.1"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "collectCoverageFrom": [
      "!src/**/index.ts",
      "src/**/*.ts"
    ],
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|js)$",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "dist/*"
    ],
    "moduleFileExtensions": [
      "ts",
      "js"
    ]
  },
  "publishConfig": {
    "access": "public"
  }
}
